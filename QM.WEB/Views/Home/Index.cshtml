            <div class="custombutton" id="btn-submit">
                <span>Submit</span>
            </div>
        </div>
        <div class="customarea" id="area-result"></div>
    </div>
    <script src="~/Scripts/index.js"></script>
    <script src="~/Scripts/services.js"></script>
</body>
</html>
